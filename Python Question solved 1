# Using the len() built-in function, find the length of your first name
  First_name = 'jasveer'
  print(len(First_name))
# Compare the length of your first name and your last name
  first_name = 'jasveer'
  last_name = 'singh'

  print(len(first_name))
  print(len(last_name))

  if first_name < last_name:
      print('first_name is bigger than last_name')
  elif first_name > last_name:
    print('first name is smaller than last_name')


# Declare 5 as num_one and 4 as num_two
  num_one = 5
  num_two = 4
  print('num_one :', num_one)
  print('num_two :', num_two)
# Add num_one and num_two and assign the value to a variable total
  num_one = 5
  num_two = 4
  sum = num_one + num_two
  print(sum)
# Subtract num_two from num_one and assign the value to a variable diff
  num_one = 10
  num_two = 25
  subtract = num_two - num_one
  print('difference is ', subtract)

# Multiply num_two and num_one and assign the value to a variable product
  num_one = 10
  num_two = 25
  multiply = num_two * num_one
  print('multiply value is ', multiply)
# Divide num_one by num_two and assign the value to a variable division
  num_one = 10
  num_two = 25
  division = num_two / num_one
  print('divisiono value is ', division)

# Use modulus division to find num_two divided by num_one and assign the value to a variable remainder
  num_one = 10
  num_two = 25
  modules = num_two % num_one
  print('remainder  value is ', modules)
# Calculate num_one to the power of num_two and assign the value to a variable exp
  num_one = 5
  num_two = 4
  power = num_one ** num_two
  print('square power is :', power)
# Find floor division of num_one by num_two and assign the value to a variable floor_division
  num_one = 25
  num_two = 5
  floor_division = num_one // num_two
  print('floor division is :', floor_division)

# The radius of a circle is 30 meters.
  # A. Calculate the area of a circle and assign the value to a variable name of area_of_circle
      
    import math
    radius = 30
    # Formula: Area = π * r²
    area_of_circle = math.pi *(radius ** 2)
    print('area_of_circle is :', area_of_circle)


  # B. Calculate the circumference of a circle and assign the value to a variable name of circum_of_circle
    import math
    radius = 30
    # Formula: Circumference = 2 * π * r
    circum_of_circle = 2 * math.pi * radius
    print('circum_of circle is :', circum_of_circle)

  # c. Take radius as user input and calculate the area.
    radius = int(input('enter radius :'))
    import math
    area_of_circle = math.pi *(radius ** 2)
    circum_of_circle = 2 * math.pi * radius
    print('area_of_circle is :', area_of_circle)
    print('circum_of circle is :', circum_of_circle)
